---
const{image,user,comentario} = Astro.props
---

<section>
    <div class="container-test">
        <div class="perfil">
            <img
                src={image}
                alt="Perfil"
            />
        </div>
        <div class="calificacion">
            <br />
            <br />
            <br />
            <h3><i class="fa-solid fa-star" style="color: yellow;"></i><i class="fa-solid fa-star" style="color: yellow;"></i><i class="fa-solid fa-star" style="color: yellow;"></i><i class="fa-solid fa-star" style="color: yellow;"></i><i class="fa-solid fa-star"></i> </h3>
        </div>
        <div class="usuario">
            <h2>{user}</h2>
        </div>
        <div class="comentario">
            <p>
            {comentario}
            </p>
        </div>
    </div>
</section>
<style>
    section {
        width: 350px;
        height: 300px;
        padding: 50px 0 0 0;
    }
    .container-test {
        border-radius: 10px;
        width: 100%;
        height: 300px;
        position: relative;
        z-index: 1;
        border: 2px solid white;
        box-shadow: 0 0 10px rgb(102, 102, 102);
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: rgb(255, 255, 255);
        transition: 0.5s;
    }
    .perfil {
        position: absolute;
        z-index: 2;
        top: -50px;
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 5px double rgb(176, 176, 176);
    }
    .perfil img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
    }
    .calificacion,
    .usuario,
    .comentario {
        position: relative;
        z-index: 2;
    }
    .comentario{
        padding: 0 20px;
        text-align: justify;
        font-family:'Times New Roman', Times, serif;
        font-size: 16px;
        color: rgb(221, 221, 221);
    }
    .container-test:hover{
        background-color: rgba(101, 101, 255, 0.863);
    }
</style>
