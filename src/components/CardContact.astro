---
const{icon,name,op1,op2}= Astro.props;
---
<section>
    <div class="icon">
        <i class={icon}></i>
    </div>
    <div class="contact-op">
        <h2>{name}</h2>
        <p>{op1}</p>
        <p>{op2}</p>
    </div>
</section>
<style>
    section{
        width: 350px;
        height: 130px;
        background-color: rgba(119, 180, 255, 0.473);
        display: flex;
        align-items: center;
        border-radius: 10px;
    }
    .icon{
        width: 35%;
        height: auto;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .icon i{
        width: 80px;
        height: 80px;
        background-color: rgb(14, 1, 97);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 45px;
        color: white;
    }
    .contact-op {
    }
</style>