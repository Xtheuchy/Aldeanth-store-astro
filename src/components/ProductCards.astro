---
const { titulo, descripcion, precio, imagen } = Astro.props;
---

<section>
    <div class="image">
        <img src="https://cdn.pixabay.com/photo/2014/12/11/03/12/lemon-tea-563806_640.jpg" alt="imagen del producto" />
    </div>
    <div class="title">
        <h2>Bebidas</h2>
    </div>
    <div class="price">
        <h3>s/. 3.00</h3>
    </div>
    <div class="buttonAdd">
        <a href="#"><button>Agregar carrito</button></a>
    </div>
</section>
<style>
    section {
        width: 20%;
        height: 350px;
        border: 2px solid black;
        border-radius: 10px;
    }
    .image {
        background-color: aliceblue;
        border-radius: 10px 10px 0 0;
        height: 250px;
        padding: 0 0;
    }
    .image img{
        width: 100%;
        height: 100%;
        border-radius: 10px 10px 0 0;
    }
    .title,
    .price {
        text-align: center;
    }
    .buttonAdd {
        display: flex;
        justify-content: center;
    }
    .buttonAdd button {
        color: white;
        border-radius: 5px;
        width: 100px;
        height: 30px;
        border: none;
        background-color: #0048ff;
    }
    .buttonAdd button:hover{
        box-shadow: 0 0 10px #0f53ff;
        transform: scale(1.1);
    }
    .buttonAdd button:active{
        box-shadow: 0 0 10px #5b8aff;
        transform: scale(0.95);
    }

   /* Estilos para pantallas pequeñas (tabletas en modo retrato) */
    @media (min-width: 768px) and (max-width: 991px) {
        section{
            height: 230px;
        }
        .image{
            height: 140px;
        }
        .title{
            font-size: 15px;
        }
        .price{
            font-size: 14px;
        }
        .buttonAdd button {
        width: 100px;
        height: 30px;
        font-size: 14px;}
    }

    /* Estilos para dispositivos móviles */
    @media (max-width: 767px) {
        section{
            height: 180px;
        }
        .image{
            height: 100px;
        }
        .title{
            font-size: 12px;
        }
        .price{
            font-size: 12px;
        }
        .buttonAdd button {
        width: 60px;
        height: 30px;
        font-size: 8px;}
    }
</style>
